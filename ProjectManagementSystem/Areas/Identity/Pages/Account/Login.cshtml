@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<section class="vh-100 login-form">
    <div class="container py-4 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-xl-10">
                <div class="card rounded-3 text-black">
                    <div class="row g-0">
                        <div class="col-lg-6">
                            <div class="card-body p-md-5 mx-md-4">
                                
                                <div class="text-center">
                                    <img src="~/asset/image/clipboard.png" class="login-logo" alt="logo">
                                    <h4 class="mt-1 mb-4 pb-1">Project Management System</h4>
                                </div>
                                
                                <form id="account" method="post">
                                    <p>Please login to your account</p>

                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                                    <div class="form-outline mb-4">
                                        <input type="text" asp-for="Input.Username" class="form-control" placeholder="Username" />
                                    </div>

                                    <div class="form-outline mb-4">
                                        <input type="password" asp-for="Input.Password" class="form-control" placeholder="Password" />
                                    </div>

                                    <div class="text-center pt-1 mb-5 pb-1">
                                        <button id="login-submit" type="submit" class="btn btn-primary w-100 mb-3" type="button">Login</button>
                                    </div>

                                </form>
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <img class="login-image" src="~/asset/image/login-picture.jpeg" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
